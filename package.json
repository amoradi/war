{
  "name": "war",
  "version": "1.0.0",
  "description": "the simple game of war",
  "main": "index.js",
  "scripts": {
    "lint-fix": "tslint ./src/**/*.{ts,tsx} --fix",
    "pretest": "npm run lint-fix",
    "test": "jest"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest.expect.ext.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Aaron Moradi",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.1.4",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1"
  },
  "dependencies": {
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
